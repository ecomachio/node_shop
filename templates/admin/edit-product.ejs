<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/material_forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="container">
        <form class="product-form" action="/admin/add-product" method="POST">
            <h1>Shipshop add product</h1>
            <div class="form-group">
                <input type="text" required="required" name="title" id="title">
                <label for="input" class="control-label" for="title">Title</label><i class="bar"></i>
            </div>
            <div class="form-group">
                <input type="text" required="required" name="imageUrl" id="imageUrl">
                <label class="control-label" for="imageUrl">imageUrl</label><i class="bar"></i>

            </div>
            <div class="form-group">
                <input type="number" required="required" name="price" id="price" step="0.01">
                <label class="control-label" for="price">price</label><i class="bar"></i>

            </div>
            <div class="form-group">
                <input type="text" required="required" name="category" id="category">
                <label class="control-label" for="category">category</label><i class="bar"></i>

            </div>
            <div class="form-group">
                <textarea required="required" name="description" id="description"></textarea>
                <label for="textarea" class="control-label">description</label><i class="bar"></i>
            </div>

            <div class="button-container">
                <button type="submit" class="button"><span>Done</span></button>
            </div>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>