<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/product_detail.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1>My Products</h1>
        <p>List of all the products ejs...</p>
        <% if (products.length > 0 ) { %>
        <div class="grid">
            <% for (const prod of products) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= prod.title %> </h1>
                </header>
                <a href="/shop/products/<%= prod.id %>">
                    <div class="card__image">
                        <img src="<%= prod.imageUrl %>" alt="A Book">
                    </div>
                </a>
                <div class="card__content">
                    <h2 class="product__price">$ <%= prod.price %></h2>
                    <p class="product__description">Save 5% more with Subscribe & Save</p>
                    <br>
                    <p class="product__description">Ships to Brazil</p>
                </div>
                <%- include('../includes/add-cart.ejs', {prod}) %>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1> Its all over, come back tomorrow</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>