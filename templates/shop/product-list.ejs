<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/product_detail.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="wrapper">
            <% if (products.length > 0 ) { %>
            <% for (const prod of products) { %>

            <div class="product">
                <div class="title">
                    <%= prod.title %>
                </div>

                <div class="text">
                    <div class="code">Product <%= prod.id %></div>
                    <div class="description">
                        <%= prod.description %>
                    </div>
                    <div class="review">
                        <span class="star-icon"></span>
                        <span class="star-icon"></span>
                        <span class="star-icon"></span>
                        <span class="star-icon"></span>
                        <span class="star-icon star-disable"></span>
                        <span class="star-reviews">84 reviews</span>
                    </div>
                    <div class="price">
                        $<%= prod.price %>
                    </div>
                    <div class="shop-actions">
                        <%- include('../includes/add-cart.ejs', {prod}) %>
                    </div>
                </div>

                <div class="preview">
                    <svg class="svg" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                        <image class="image" xlink:href="<%= prod.imageUrl %>" x="0" y="0" width="200px"
                            height="180px" />
                    </svg>
                </div>

            </div>
            <% } %>
            <% } else { %>
            <h1> Its all over, come back tomorrow</h1>
            <% } %>

        </div>
    </main>
    <%- include('../includes/end.ejs') %>